# =================================================================
# QUEUE MANAGEMENT SYSTEM - ENVIRONMENT CONFIGURATION EXAMPLE
# =================================================================
# Copy this file to .env and update the values for your environment

# Environment Settings
ENVIRONMENT=development
DEBUG=true

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
POSTGRES_DB=queue_app
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_password_in_production
DB_PORT=5432

# =================================================================
# REDIS CONFIGURATION
# =================================================================
REDIS_PASSWORD=change_this_redis_password_too
REDIS_PORT=6379

# =================================================================
# BACKEND CONFIGURATION
# =================================================================
BACKEND_PORT=8000
SECRET_KEY=change-this-secret-key-to-something-very-secure-for-production
ACCESS_TOKEN_EXPIRE_MINUTES=11520
ALLOWED_HOSTS=["*"]

# =================================================================
# OAUTH CONFIGURATION
# =================================================================
# Google OAuth (get from https://console.developers.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Facebook OAuth (get from https://developers.facebook.com/)
FACEBOOK_APP_ID=your-facebook-app-id-here
FACEBOOK_APP_SECRET=your-facebook-app-secret-here

# =================================================================
# QR CODE & DEEP LINKS
# =================================================================
QR_CODE_BASE_URL=http://localhost:8000

# =================================================================
# NGINX CONFIGURATION (for production)
# =================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =================================================================
# DEVELOPMENT TOOLS
# =================================================================
# Adminer (Database management)
ADMINER_PORT=8080

# Redis Commander
REDIS_COMMANDER_PORT=8081
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=change_this_admin_password

# =================================================================
# EMAIL CONFIGURATION (for future features)
# =================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_USE_TLS=true

# =================================================================
# FILE STORAGE CONFIGURATION
# =================================================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads

# =================================================================
# MONITORING & LOGGING (for future features)
# =================================================================
LOG_LEVEL=INFO
SENTRY_DSN=

# =================================================================
# RATE LIMITING (for future features)
# =================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =================================================================
# PRODUCTION SETTINGS
# =================================================================
# For production deployment, uncomment and configure these:
# ENVIRONMENT=production
# DEBUG=false
# ALLOWED_HOSTS=["yourdomain.com", "www.yourdomain.com"]
# SECRET_KEY=generate-a-new-very-secure-secret-key-for-production
# QR_CODE_BASE_URL=https://yourdomain.com